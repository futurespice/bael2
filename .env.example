# =============================================================================
# БайЭл Environment Example (.env.example)
# =============================================================================
# Скопируйте в .env и заполните значения

# =============================================================================
# CORE (ОБЯЗАТЕЛЬНО ИЗМЕНИТЬ В PRODUCTION!)
# =============================================================================
DEBUG=False
SECRET_KEY=your-secret-key-here-change-me

# =============================================================================
# DATABASE
# =============================================================================
# Local development:
DATABASE_URL=postgres://baiel:password@127.0.0.1:5434/baiel

# Production (Docker):
# DATABASE_URL=postgres://baiel:password@db:5432/baiel

# Пароль для PostgreSQL в Docker
DB_PASSWORD=secure-password-here

# =============================================================================
# REDIS
# =============================================================================
# Local development:
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# Production (Docker):
# REDIS_HOST=redis
# REDIS_PORT=6379

CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# =============================================================================
# EMAIL (Gmail SMTP)
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@baielapp.com.kg

# =============================================================================
# APPLICATION
# =============================================================================
# Маркер для определения роли партнёра (3-5 символов)
PARTNER_MARKER=p!8Rt

# URL фронтенда для email ссылок
FRONTEND_URL=https://baielapp.com.kg

# =============================================================================
# DJANGO
# =============================================================================
DJANGO_SETTINGS_MODULE=config.settings
